<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield(:title) %></title>
    <%= render "layouts/rails_default" %>
    <%= render "layouts/shim" %>
  </head>
  <body>
    <p style = "float : right;">
      <%= link_to_unless I18n.locale == :en, image_tag("en.png"), locale: :en %>
      <%= link_to_unless I18n.locale == :vi, image_tag("vn.png"), locale: :vi %>
    </p>
    <%= render "layouts/header" %>
    <div class= "container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>" style="text-align:center;"><%= message %></div>
      <% end %>
      <%= yield %>
      <%= render "layouts/footer" %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
