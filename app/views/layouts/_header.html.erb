<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("super.jpg", alt: "Rails logo"), home_path, id: "logo"%>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.home"), home_path %></li>
        <li><%= link_to t("static_pages.help.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <%= link_to  "#{@current_user[:name]} <b class=\"caret\"></b>".html_safe, "#", 
              class: "dropdown-toggle", data: {toggle: "dropdown"} %>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path, class:"header123"%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
